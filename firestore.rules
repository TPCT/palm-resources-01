rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Sessions collection
    match /sessions/{sessionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Events subcollection
      match /events/{eventId} {
        allow read: if request.auth != null && 
          request.auth.uid == get(/databases/$(database)/documents/sessions/$(sessionId)).data.userId;
        allow create: if request.auth != null && 
          request.auth.uid == get(/databases/$(database)/documents/sessions/$(sessionId)).data.userId;
      }
    }
    
    // Idempotency collection (server-only)
    match /idempotency/{idempotencyKey} {
      allow read, write: if false; // Only accessible via Firebase Admin SDK
    }
  }
}
